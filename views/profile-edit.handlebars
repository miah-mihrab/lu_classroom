<div class="container">
    <form method="POST" action="/profile-edit/:id" class="text-secondary">
        <div class="form-group">
            <label for="fname">First Name</label>
            <input type="text" class="form-control" name="fname" id="fname" value={{firstname}}>
        </div>

        <div class="form-group">
            <label for="lname">Last Name</label>
            <input type="text" class="form-control" name="lname" id="lname" value={{lastname}}>
        </div>
        <div class="form-group">
            <label for="dob">Date Of Birth</label>
            <input type="date" class="form-control" name="dob" placeholder="" autocomplete="off" id="dob">

        </div>
        <div class="form-group">
            <label for="batch">Batch</label>
            <input type="text" class="form-control" name="batch" id="batch" value={{batch}}>
        </div>
        <div class="form-group">
            <label for="section">Section</label>
            <input type="text" class="form-control" name="section" id="section" value={{section}}>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>

</div>