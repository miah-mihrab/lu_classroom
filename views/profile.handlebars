{{> header}}
<div class="container">
    {{log userName}}
    <div class="area">

        <div class="class mt-5">
            {{#if allClass}}
            <div class="row">
                {{#each allClass}}
                    <div class="col-lg-4 col-md-6 col-sm-12 mt-2">
                        <div class="card" style="width: 100%;">
                            <div class="card-head">
                                <img src="../images/lu1.jpg" class="card-img-top" alt="...">
                                <div class="card-head-content">
                                    <h5 class="card-title" style="max-width: 200px;">{{this.classname}}</h5>
                                </div>
                            </div>
                            <div class="card-body">
                                {{this.classname}}
                                <div class="mt-3"><i class="fas fa-chalkboard-teacher mr-2"></i>{{this.author}}</div>
                                <div class="mt-2"><i class="fas fa-users mr-2"></i>{{this.student.length}} students</div>
                                <div class="mt-2"><i class="fas fa-key mr-2"></i>{{this._id}}</div>
                            </div>
                            <div class="card-foot p-2">
                                <a href="/delete-class/{{this._id}}" class="btn btn-danger float-right">Delete</a>
                                <a href="/classroom/{{this._id}}" class="btn btn-primary float-right mr-2">Enter</a>
                            </div>
                        </div>
                    </div>

                {{/each}}
            {{else}}
            <div class="noClass">
                <h1>You have no class yet üòê</h1>
                <div class="info">
                    <span>Care to create/join </span><span class="bounceEmoji">üôÑ</span>
                </div>
            </div>
            {{/if}}
        </div>

    </div>

    <!-- Modal -->
    <div class="modal fade" id="joinClass" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="joinClassLabel">Room Code</h5>
                    {{!-- <button class="close" data-dismiss="modal" aria-label="Close">  </button> --}}
                    <span class="close" data-dismiss="modal">&times;</span>

                </div>
                <div class="body">
                    <form action="" method="POST" class="p-3">
                        <input type="text" class="form-control" placeholder="Room Code" name="roomcode">

                        <button type="submit" class="btn btn-primary">Join Class</button>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="createClass" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createClassLabel">Create Class</h5>
                    {{!-- <button class="close" data-dismiss="modal" aria-label="Close">  </button> --}}
                    <span class="close" data-dismiss="modal">&times;</span>

                </div>
                <div class="body">
                    <form action="" method="POST" class="p-3">
                        <div class="form-group">
                            <label for="classname">Class Name (required)</label>
                            <input type="text" class="form-control" name="classname" placeholder="Class Name">
                        </div>
                        <div class="form-group">
                            <label for="section">Section</label>
                            <input type="text" class="form-control" name="section" placeholder="Section">
                        </div>
                        <div class="form-group">
                            <label for="subject">Subject</label>
                            <input type="text" class="form-control" name="subject" placeholder="Subject">
                        </div>
                        <button type="submit" class="btn btn-primary">Create</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>

